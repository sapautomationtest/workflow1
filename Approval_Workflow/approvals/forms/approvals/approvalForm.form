{
    "id": "approvalform",
    "schemaVersion": "1.1.0",
    "name": "approvalForm",
    "revision": "1.0",
    "type": "task",
    "readOnly": false,
    "content": [
        {
            "id": "requestor",
            "type": "section",
            "title": "Requestor",
            "content": [
                {
                    "id": "requestor",
                    "type": "string",
                    "label": "Name",
                    "readOnly": true,
                    "value": "${context.userData.firstName}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "last_name",
                    "type": "string",
                    "label": "Last Name",
                    "readOnly": true,
                    "value": "${context.userData.lastName}",
                    "constraints": {
                        "required": false
                    }
                }
            ]
        },
        {
            "id": "please_choose",
            "type": "section",
            "title": "Please, choose",
            "content": [
                {
                    "id": "decision",
                    "type": "string",
                    "label": "Decision",
                    "readOnly": false,
                    "value": "${context.approval.decision}",
                    "control": {
                        "type": "Dropdown",
                        "properties": {
                            "items": [
                                {
                                    "value": "Y",
                                    "displayValue": "Approve"
                                },
                                {
                                    "value": "R",
                                    "displayValue": "Reject"
                                }
                            ]
                        }
                    },
                    "constraints": {
                        "required": true,
                        "enum": [
                            "Y",
                            "R"
                        ]
                    }
                },
                {
                    "id": "comments",
                    "type": "string",
                    "label": "Comments",
                    "readOnly": false,
                    "value": "${context.approval.comments}",
                    "control": {
                        "type": "TextArea",
                        "properties": {
                            "height": "medium"
                        }
                    },
                    "constraints": {
                        "required": false
                    }
                }
            ]
        }
    ],
    "decisions": [
        {
            "id": "submit",
            "text": "Submit",
            "decisionType": "positive"
        }
    ]
}