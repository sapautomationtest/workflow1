{
    "id": "rejectionform",
    "schemaVersion": "1.1.0",
    "name": "RejectionForm",
    "revision": "1.0",
    "type": "task",
    "readOnly": false,
    "content": [
        {
            "id": "requestor",
            "type": "section",
            "title": "Requestor",
            "content": [
                {
                    "id": "requestor",
                    "type": "string",
                    "label": "Name",
                    "readOnly": true,
                    "value": "${context.userData.firstName}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "last_name",
                    "type": "string",
                    "label": "Last Name",
                    "readOnly": true,
                    "value": "${context.userData.lastName}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "comments",
                    "type": "string",
                    "label": "Comments",
                    "readOnly": true,
                    "value": "${context.userData.commentForApprover}",
                    "constraints": {
                        "required": false
                    }
                }
            ]
        },
        {
            "id": "project_data",
            "type": "section",
            "title": "Project Data",
            "content": [
                {
                    "id": "id",
                    "type": "string",
                    "label": "ID",
                    "readOnly": true,
                    "value": "${context.projectData.projectID}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "description",
                    "type": "string",
                    "label": "Description",
                    "readOnly": true,
                    "value": "${context.projectData.description}",
                    "constraints": {
                        "required": false
                    }
                }
            ]
        }
    ],
    "decisions": [
        {
            "id": "submit",
            "text": "Submit",
            "decisionType": "positive"
        }
    ]
}